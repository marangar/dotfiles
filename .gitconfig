[diff]
	tool = vimdiff
[difftool]
	prompt = false
# git-delta settings
[core]
    pager = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true    # use n and N to move between diff sections
    side-by-side = true
    line-numbers = true
    features = weeping-willow
[include]
    path = ~/.config/delta-themes.gitconfig
[merge]
    conflictstyle = zdiff3
